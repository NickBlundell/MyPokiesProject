{
  "name": "@mypokies/monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "dev": "turbo dev --concurrency=15",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "dev:casino": "turbo dev --filter=@mypokies/casino",
    "dev:admin": "turbo dev --filter=@mypokies/admin",
    "build:casino": "turbo build --filter=@mypokies/casino",
    "build:admin": "turbo build --filter=@mypokies/admin",
    "deploy:casino": "turbo deploy --filter=@mypokies/casino",
    "deploy:admin": "turbo deploy --filter=@mypokies/admin"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.7.2",
    "prettier": "^3.3.3",
    "turbo": "^2.0.12",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "next": "^15.5.5"
  }
}